---
interface Props {
    text: string;
    icon: string;
}

const { text, icon } = Astro.props;
---

<div class="px-5">
  <span class="text-2xl md:text-4xl font-mono text-emerald-50">Skills</span>
  <div class="flex flex-row gap-5 mt-3">
    <div class="flex items-center p-2 bg-dark border border-emerald-500 w-fit cursor-help rounded">
      <div class="text-xl text-emerald-50">
        <i class={icon}></i>
      </div>
      <span class="text-base font-sans text-emerald-50 text-base">{ text }</span>
    </div>
  </div>
</div>