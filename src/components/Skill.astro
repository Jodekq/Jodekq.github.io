---
interface Props {
    text: string;
    icon: string;
}

const { text, icon } = Astro.props;
---

<div>
  <div class="flex items-center p-2 bg-dark border border-emerald-500 w-fit cursor-help rounded-lg h-12">
    <div class="text-xl text-emerald-50">
      <i class={icon}></i>
    </div>
    <span class="text-base font-sans text-emerald-50 text-base pr-1 pl-2">{ text }</span>
  </div>
</div>
