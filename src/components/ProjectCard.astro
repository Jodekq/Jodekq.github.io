---
interface Props {
    title: string;
    text: string;
    imgSrc: string;
    link1: string;
    link2: string;
    link1Text: string;
    link2Text: string;
}

const { text, title , imgSrc , link1 , link2 , link1Text , link2Text } = Astro.props;
---

<div>
  <div class="flex flex-row py-4 bg-dark w-full gap-2 items-center">
    <img class="h-28 p-2" src={ imgSrc } alt="">
    <div class="text-xl text-emerald-50 flex flex-col gap-3">
      <span class="text-2xl font-sans text-emerald-50">{ title }</span>
      <span class="text-base font-sans text-emerald-50 text-base">{ text }</span>
      <div class="flex flex-row gap-3">
        <a class="bg-emerald-950 p-2 rounded-full text-base" href={ link1 } target="_blank" class="text-emerald-50">{ link1Text }</a>
        <a class="bg-emerald-950 p-2 rounded-full text-base" href={ link2 } target="_blank" class="text-emerald-50">{ link2Text }</a>
      </div>
    </div>
  </div>
</div>
<div class="border border-emerald-200 w-full rounded-lg"></div>